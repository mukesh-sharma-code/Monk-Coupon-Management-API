{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "rootDirs": ["./src", "."],
    "strict": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"  // Added to include node_modules types
    ],          
    "types": ["jest"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "jest.config.ts"  // Explicitly include jest config
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}